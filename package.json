{
    "name": "svelte-barcode-gen",
    "version": "1.0.2",
    "description": "Svelte 5 wrapper for JsBarcode - Generate barcodes with full TypeScript support!",
    "author": "",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Mixxy3k/svelte-barcode-gen.git"
    },
    "bugs": {
        "url": "https://github.com/Mixxy3k/svelte-barcode-gen/issues"
    },
    "homepage": "https://github.com/Mixxy3k/svelte-barcode-gen#readme",
    "keywords": [
        "svelte",
        "svelte5",
        "barcode",
        "jsbarcode",
        "typescript",
        "qr",
        "code128",
        "ean",
        "upc"
    ],
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "prepare": "svelte-kit sync || echo ''",
        "package": "svelte-kit sync && svelte-package",
        "prepack": "npm run package",
        "postpack": "publint || echo 'publint skipped'",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "format": "prettier --write .",
        "lint": "prettier --check ."
    },
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*"
    ],
    "sideEffects": [
        "**/*.css"
    ],
    "svelte": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js"
        }
    },
    "peerDependencies": {
        "svelte": "^5.0.0",
        "jsbarcode": "^3.12.1"
    },
    "devDependencies": {
        "@sveltejs/adapter-auto": "^7.0.0",
        "@sveltejs/adapter-static": "^3.0.10",
        "@sveltejs/kit": "^2.47.1",
        "@sveltejs/package": "^2.5.4",
        "@sveltejs/vite-plugin-svelte": "^6.2.1",
        "prettier": "^3.6.2",
        "prettier-plugin-svelte": "^3.4.0",
        "publint": "^0.3.14",
        "svelte": "^5.41.0",
        "svelte-check": "^4.3.3",
        "typescript": "^5.9.3",
        "vite": "^7.1.10"
    }
}
